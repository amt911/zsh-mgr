# Maintainer: amt911
pkgname=zsh-mgr
pkgver=0.1.0
pkgrel=1
pkgdesc="A modern, fast plugin manager for ZSH written in Rust"
arch=('x86_64')
url="https://github.com/amt911/zsh-mgr"
license=('MIT')
depends=('git' 'zsh')
makedepends=('rust' 'cargo')
source=("$pkgname-$pkgver.tar.gz::https://github.com/amt911/zsh-mgr/archive/v$pkgver.tar.gz")
sha256sums=('SKIP')

build() {
    cd "$srcdir/$pkgname-$pkgver/zsh-mgr-rs"
    cargo build --release --locked
}

package() {
    cd "$srcdir/$pkgname-$pkgver/zsh-mgr-rs"
    
    install -Dm755 "target/release/zsh-mgr" "$pkgdir/usr/bin/zsh-mgr"
    
    install -Dm644 "README_PARALLEL.md" "$pkgdir/usr/share/doc/$pkgname/README.md"
    
    # Install license if it exists
    if [ -f "../LICENSE" ]; then
        install -Dm644 "../LICENSE" "$pkgdir/usr/share/licenses/$pkgname/LICENSE"
    fi
}
